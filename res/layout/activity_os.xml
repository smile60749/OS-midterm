<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.os.OsActivity" >

     <TextView
         android:id="@+id/textShow"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="請輸入行程P1的分割時間"
         android:textColor="#FF7755" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editTime"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#FF5577" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <TextView
        android:id="@+id/textshow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="請輸入行程P1的優先權"
        android:textColor="#FF7755" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editpri"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#FF5577" />

        <Button
            android:id="@+id/btnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="確定"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/textGrantt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF7755"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textGrantt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF7755"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textGrantt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF7755"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textGrantt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF7755"
        android:textSize="12dp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.85" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="行程"
            android:textColor="#FF5577" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="返回"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text1"
            android:textColor="#ff5577" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text2"
            android:layout_below="@+id/text2"
            android:textColor="#ff5577" />

        <TextView
            android:id="@+id/prio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="66dp"
            android:layout_toRightOf="@+id/text1"
            android:text="優先權"
            android:textColor="#FF5577" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="42dp"
            android:text="分割時間"
            android:textColor="#FF5577" />

        <TextView
            android:id="@+id/textprio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/prio"
            android:layout_alignTop="@+id/textTime"
            android:textColor="#ff5577" />

    </RelativeLayout>

</LinearLayout>